{% extends "base.html.j2" %}
{% set EMBED_MODE = false %}
{% block title %}{{ course_code }} Syllabus{% endblock %}
{% block body %}
<main class="full-content" style="max-width:1000px;margin:0 auto;padding:1rem">
  <h1 style="margin-top:0">{{ course_code }} – {{ course_name_full }}</h1>
  <link rel="stylesheet" href="/assets/courses/{{ course_code }}.css">

  <section aria-labelledby="section-overview">
    <h2 id="section-overview">Overview</h2>
    <p>Term: {{ semester }} {{ year }}</p>
    <p>Section: {{ course_section | default('901') }}</p>
  </section>

  <section aria-labelledby="section-instructor">
    <h2 id="section-instructor">Instructor</h2>
    <p><strong>{{ instructor.name }}</strong> &lt;<a href="mailto:{{ instructor.email }}">{{ instructor.email }}</a>&gt;</p>
  </section>

  <section aria-labelledby="section-calendar">
    <h2 id="section-calendar">Important Dates</h2>
    <ul>
      <li>Classes Begin: {{ calendar.dates.start | date }}</li>
      <li>Add/Drop Deadline: {{ calendar.dates.add_drop | date }}</li>
      <li>Withdrawal Deadline: {{ calendar.dates.withdrawal | date }}</li>
      <li>Finals Week: {{ calendar.dates.finals_start | date }} – {{ calendar.dates.finals_end | date }}</li>
    </ul>
  </section>

  {% if schedule_markdown %}
  <section aria-labelledby="section-schedule">
    <h2 id="section-schedule">Schedule (Summary)</h2>
    <div>{{ schedule_markdown | markdown | safe }}</div>
  </section>
  {% endif %}

  <section aria-labelledby="section-policies">
    <h2 id="section-policies">Policies</h2>
    <p>See Blackboard for official course policies and grading details.</p>
  </section>
</main>
{% endblock %}

