{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Course Guide",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "course_code": {"type": "string"},
        "title": {"type": "string"},
        "credits": {"type": ["number", "integer"]}
      },
      "additionalProperties": true
    },
    "description": {"oneOf": [ {"type": "string"}, {"type": "object", "properties": {"text": {"type": "string"}}, "required": ["text"], "additionalProperties": true} ]},
    "prerequisites": {"oneOf": [ {"type": "string"}, {"type": "object", "properties": {"text": {"type": "string"}}, "required": ["text"], "additionalProperties": true} ]},
    "goals": {"type": "array", "items": {"type": "string"}},
    "outcomes": {"type": "array", "items": {"type": "string"}},
    "textbook": {"type": "object"},
    "technology": {"type": "object"},
    "evaluation": {"type": "object"},
    "grading": {"type": "object"},
    "policies": {"type": "object"},
    "schedule": {"type": "object"}
  },
  "additionalProperties": true
}
