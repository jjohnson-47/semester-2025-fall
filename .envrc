# Auto-select GitHub account for this repository
export GH_ACCOUNT=jjohnson-47

# Optional: Add a reminder to switch if needed
if command -v gh &> /dev/null; then
  current_account=$(gh auth status 2>/dev/null | grep "Active account: true" -B1 | head -1 | awk '{print $NF}')
  if [ "$current_account" != "$GH_ACCOUNT" ]; then
    echo "Switching gh to $GH_ACCOUNT account..."
    gh auth switch -u "$GH_ACCOUNT"
  fi
fi